.floor-1-content{
  width: 750rpx;
  display: block;
  position: relative;
  background-color: #ffffff;
}
.floor-1-content .mainImg{
  height: 325rpx;
}
.floor-1-content .mainImg navigator{
  width: 100%;
  height: 100%;
}
.floor-1-content .mainImg image{
  width: 100%;
  height: 100%;
}
.floor-1-content .goodsList-list{
  top: -60rpx;
  overflow-x: auto;
  overflow-y: hidden;
  position: relative;
}
.goodsList-list .content-list{
  width: -webkit-max-content;
  width: -moz-max-content;
  width: max-content;
  overflow: hidden;
  padding: 2rpx 20rpx;
}
.goodsList-list .content-list .list-item{
  float: left;
  width: 220rpx;
  height: 257rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 0 4rpx rgba(0,0,0,0.2);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.goodsList-list .content-list .list-item .shopImg{
  width: 200rpx;
  height: 148rpx;
  position: relative;
  text-align: center
}
.goodsList-list .content-list .list-item navigator{
  width: 100%;
  height: 100%;
  color: #333;
  padding: 10rpx;
  font-size: 18rpx;
  text-decoration: none;
  display: inline-block;
  box-sizing: border-box;
}
.goodsList-list .content-list .list-item .shopImg image{
  max-width: 148rpx;
  max-height: 148rpx;
  display: inline-block;
  margin: auto;
}
.goodsList-list .content-list .list-item .shopName{
  height: 48rpx;
  font-size: 18rpx;
  line-height: 25rpx;
  overflow: hidden;
  margin-top: 5rpx;
}
.goodsList-list .content-list .list-item .shopPrice{
  height: 34rpx;
}
.goodsList-list .content-list .list-item .shopPrice .text{
  float: left;
  font-size: 20rpx;
  font-weight: 600;
  padding-top: 8rpx;
  color: #f00;
}
.goodsList-list .content-list .list-item .shopPrice .linePrice{
  font-size: 16rpx;
  padding-top: 12rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 5rpx;
  float: left;
}
.goodsList-list .content-list .list-item.lookMore{
  text-align: center;
}
.goodsList-list .content-list .list-item.lookMore navigator image{
  width: 109rpx;
  height: 135rpx;
  margin-top: 61rpx;
}