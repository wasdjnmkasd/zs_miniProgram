.header-1-content{
  width: 750rpx;
  height: 88rpx;
  display: block;
  background-color: #ffffff;
  border-bottom: solid 1rpx #e7e7e7;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.header-left{
  height: 88rpx;
  color: #ffffff;
  display: inline-block;
  position: absolute;
  top: 0;
  left: 6rpx;
}
.header-left > view{
  width: 54rpx;
  height: 54rpx;
  color: #333;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  padding: 10rpx;
}
.header-left > view image{
  margin-top: 8rpx;
  width: 54rpx;
  height: 54rpx;
}
.header-input{
  width: 580rpx;
  height: 60rpx;
  display: block;
  background-color: #ededed;
  margin: 14rpx 0 0 86rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}
.header-input image.i_search{
  width: 32rpx;
  height: 30rpx;
  margin: 16rpx 0 0 15rpx;
}
.header-input input{
  width: calc(100% - 60rpx);
  height: 60rpx;
  color: #333;
  font-size: 27rpx;
  position: absolute;
  top: 0;
  left: 60rpx;
}
.header-input .i_clear{
  width: 28rpx;
  height: 30rpx;
  position: absolute;
  top: 14rpx;
  left: auto;
  right: 15rpx;
  display: none;
}
.header-title{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  text-align: center;
  color: #333;
  font-size: 36rpx;
  line-height: 85rpx;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.header-right{
  width: 54rpx;
  height: 54rpx;
  color: #ffffff;
  display: inline-block;
  position: absolute;
  top: 0;
  left: auto;
  right: 3rpx;
  padding: 10rpx;
}
.header-right image{
  width: 54rpx;
  height: 54rpx;
  margin-top: 8rpx;
  color: #333;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  line-height: 63rpx;
  text-align: center;
  display: inline-block;
  position: relative;
}
.header-right > view{
  position: relative;
}
.header-right > view .number{
  min-width: 34rpx;
  height: 34rpx;
  text-align: center;
  border-radius: 17rpx;
  line-height: 34rpx;
  font-weight: 400;
  font-size: 20rpx;
  color: #ffffff;
  background-color: #b4282d;
  position: absolute;
  top: -5rpx;
  right: -10rpx;
}