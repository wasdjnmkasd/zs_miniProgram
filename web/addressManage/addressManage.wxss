page{
  padding-top: 0;
}
.address-manage-content{
  width: 100%;
  height: auto;
  padding-top: 5rpx;
  overflow: hidden;
}
.address-manage-content .address-manage-list{
  width: 100%;
  padding: 0;
  margin: 0;
  list-style-type: none;
}
.address-manage-list .list-item{
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.address-manage-list .list-item .info{
  width: 100%;
  height: auto;
  padding: 0 25rpx 0 30rpx;
  overflow: hidden;
  border-bottom: solid 1rpx #dfdfdf;
  box-sizing: border-box;
}
.address-manage-list .list-item .info .name{
  height: 75rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 28rpx;
  font-weight: 600;
  line-height: 93rpx;
  color: #333333;
  float: left;
}
.address-manage-list .list-item .info .mobilePhone {
  height: 75rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 28rpx;
  line-height: 93rpx;
  color: #333333;
  float: right;
}
.address-manage-list .list-item .info .address{
  width: 100%;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 28rpx;
  line-height: 38rpx;
  color: #333333;
  float: left;
  margin-bottom: 18px;
}
.address-manage-list .list-item .setting{
  width: 100%;
  height: 76rpx;
  padding: 0 15rpx 0 30rpx;
  box-sizing: border-box;
}
.address-manage-list .list-item .setting .btnBox_left{
  width: 180rpx;
  height: 100%;
  float: left;
  position: relative;
}
.address-manage-list .list-item .setting .btnBox_left .icon.btn{
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #dfdfdf;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 3rpx;
  margin-top: -20rpx;
  display: inline-block;
  box-sizing: border-box;
}
.address-manage-list .list-item .setting .btnBox_left image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 3rpx;
  margin-top: -20rpx;
  display: inline-block;
  box-sizing: border-box;
  background-color: #b4282d;
  border: solid 1px #b4282d;
}
.address-manage-list .list-item .setting .btnBox_left .text{
  height: 76rpx;
  position: absolute;
  top: 0;
  left: 54rpx;
  display: inline-block;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 28rpx;
  font-weight: 400;
  line-height: 76rpx;
  color: #666666
}
.address-manage-list .list-item .setting .btnBox_right{
  width: calc(100% - 180rpx);
  height: 100%;
  float: right;
  overflow: hidden;
}
.address-manage-list .list-item .setting .btnBox_right .btn{
  width: 90rpx;
  height: 76rpx;
  float: right;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  line-height: 76rpx;
  background-color: transparent;
  border-radius: 15rpx;
}
.address-manage-content .address-manage-create{
  width: 100%;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.address-manage-content .address-manage-create .box{
  width: 100%;
  height: 120rpx;
  background-color: #eeeeee;
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
}
.address-manage-content .address-manage-create .box text{
  width: 662rpx;
  height: 90rpx;
  margin-left: 44rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 36rpx;
  color: #ffffff;
  line-height: 92rpx;
  text-align: center;
  background-color: #b4282d;
  border-radius: 15rpx;
  display: inline-block;
}