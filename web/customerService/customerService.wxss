.customerService-1-content{
  width: 750rpx;
  height: auto;
  padding-top: 20rpx;
  position: relative;
  overflow: hidden;
}
.customerService-1-content .customerService-1-prompt{
  width: calc(100% - 40rpx);
  padding: 10rpx;
  color: #f34d4d;
  font-size: 20rpx;
  line-height: 28rpx;
  font-weight: 500;
  margin: 0 auto 20rpx auto;
  border-top: solid 1rpx #dfdfdf;
  border-bottom: solid 1rpx #dfdfdf;
  background-color: #fff8db;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.customerService-1-prompt .prompt-text{
  display: inline-block;
  vertical-align: top;
}
.customerService-1-content .customerService-1-main{
  width: calc(100% - 40rpx);
  height: auto;
  background-color: #ffffff;
  border-top: solid 1rpx #dfdfdf;
  border-bottom: solid 1rpx #dfdfdf;
  border-radius: 10rpx;
  margin: 0 auto 20rpx auto;
}
.customerService-1-main .mainCont{
  width: 100%;
  height: 88rpx;
  padding-left: 25rpx;
  overflow: hidden;
}
.customerService-1-main .mainCont .name{
  width: 120rpx;
  height: 100%;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 24rpx;
  line-height: 90rpx;
  color: #333333;
  float: left;
}
.customerService-1-main .mainCont .content{
  width: calc(100% - 120rpx);
  height: 100%;
  float: left;
}
.customerService-1-main .mainCont .content .cont{
  width: calc(100% - 30rpx);
  height: 100%;
  float: left;
}
.customerService-1-main .mainCont .content .cont input, .customerService-1-main .mainCont .content .cont select{
  width: 100%;
  min-width: 380rpx;
  height: 54rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 24rpx;
  line-height: 54rpx;
  color: #999999;
  margin-top: 17rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background-color: transparent;
  text-align: left;
  -webkit-appearance: none;
  appearance: none;
}
.customerService-1-content .customerService-1-commit{
  width: calc(100% - 88rpx);
  height: 92rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 36rpx;
  color: #ffffff;
  line-height: 92rpx;
  text-align: center;
  margin: 60rpx auto 60rpx auto;
  background-color: #b4282d;
  border-radius: 15rpx;
  display: block;
}
.customerService-1-content .btn{
  width: calc(100% - 88rpx);
  height: 92rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 36rpx;
  line-height: 92rpx;
  text-align: center;
  margin: auto;
  border-radius: 15rpx;
  display: block;
  border: 1rpx solid #eee;
  color: #666;
  background: #fff;
}
.customerService-1-content .btn::after{
  border: none;
}