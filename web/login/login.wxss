.login-content{
  width: 100%;
  height: auto;
  padding-top: 90rpx;
}
.login-content .login-account{
  width: calc(100% - 88rpx);
  margin: 0 auto 40rpx auto;
  border: solid 1rpx #cccccc;
  background-color: #fff;
  background-image: none;
  border-radius: 15rpx;
  display: table;
  overflow: hidden;
}
.login-content .login-account.error_status{
  border-color: #f34d4d;
}
.login-account .icon_people{
  width: 22rpx;
  height: 32rpx;
  padding: 29rpx 27rpx;
  float: left;
}
.login-content input{
  width: calc(100% - 160rpx);
  height: 86rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 30rpx;
  line-height: 86rpx;
  float: left;
 }
.login-account .icon_clear{
  width: 28rpx;
  height: 28rpx;
  padding: 29rpx 26rpx;
  float: left;
}
.login-content .login-password{
  width: calc(100% - 88rpx);
  margin: 0 auto 40rpx auto;
  border: solid 1rpx #cccccc;
  background-color: #fff;
  background-image: none;
  border-radius: 15rpx;
  display: table;
  overflow: hidden;
}
.login-content .login-password.error_status{
  border-color: #f34d4d;
}
.login-password .icon_lock{
  width: 20rpx;
  height: 32rpx;
  padding: 27rpx 30rpx;
  float: left;
}
.login-password .icon_eye{
  width: 34rpx;
  height: 24rpx;
  padding: 31rpx 23rpx;
  float: left;
}
.login-content .login-loginBtn{
  width: calc(100% - 88rpx);
  height: 92rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 36rpx;
  color: #ffffff;
  line-height: 92rpx;
  text-align: center;
  margin: 60rpx auto;
  background-color: #b4282d;
  border-radius: 15rpx;
  display: block;
}
.login-content .login-prompt{
  width: calc(100% - 88rpx);
  margin: 0 auto 110rpx auto;
  text-align: center;
}
.login-prompt navigator{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 26rpx;
  color: #666666;
  text-decoration: none;
  margin: 0 50rpx;
  display: inline-block;
}
.login-third {
  width: calc(100% - 150rpx);
  height: auto;
  text-align: center;
  margin: 0 auto 30rpx auto;
  overflow: hidden;
  position: relative;
}
.login-third::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #e4e4e4;
  top: 32rpx;
  left: 0;
  z-index: -1;
}
.login-third .header {
  height: 36rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 26rpx;
  color: #999999;
  line-height: 36rpx;
  padding: 0 16rpx;
  margin-bottom: 30rpx;
  background-color: #eeeeee;
  display: inline-block;
}
.login-third .body image {
  width: 96rpx;
  height: 96rpx;
  display: inline-block;
  margin: 0 30rpx;
  text-align: center;
  padding: 0;
}