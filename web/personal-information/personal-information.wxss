.personal-information-content{
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  position: relative;
  overflow: hidden;
}
.personal-information-content .personal-information-prompt{
  width: calc(100% - 40rpx);
  padding: 10rpx;
  color: #f34d4d;
  font-size: 20rpx;
  line-height: 28rpx;
  font-weight: 500;
  margin: 0 auto 20rpx auto;
  border-top: solid 1rpx #dfdfdf;
  border-bottom: solid 1rpx #dfdfdf;
  background-color: #fff8db;
  border-radius: 8rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.personal-information-content .personal-information-prompt .prompt-text{
  float: left;
}
.personal-information-content .personal-information-main{
  width: calc(100% - 40rpx);
  height: auto;
  background-color: #ffffff;
  border-top: solid 1rpx #dfdfdf;
  border-bottom: solid 1rpx #dfdfdf;
  border-radius: 10rpx;
  margin: 0 auto 20rpx auto;
}
.personal-information-main .mainCont{
  width: 100%;
  height: 88rpx;
  padding-left: 36rpx;
  overflow: hidden;
}
.personal-information-main .mainCont.big{
  height: 118rpx;
}
.personal-information-main .mainCont.big .name{
  line-height: 115rpx;
}
.personal-information-main .mainCont .name{
  width: 200rpx;
  height: 100%;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  line-height: 85rpx;
  color: #333333;
  float: left;
}
.personal-information-main .mainCont .name.important::after{
  content: "*";
  color: #FF0000;
}
.personal-information-main .mainCont .content{
  width: calc(100% - 200rpx);
  height: 100%;
  float: left;
}
.personal-information-main .mainCont .content .headPortrait{
  width: 84rpx;
  height: 84rpx;
  float: left;
  margin-top: 17rpx;
  border-radius: 42rpx;
  overflow: hidden;
}
.personal-information-main .mainCont .content .headPortrait image{
  width: 100%;
  height: 100%;
}
.personal-information-main .mainCont .content .cont input,
.personal-information-main .mainCont .picker .pickerContent{
  width: 100%;
  min-width: 380rpx;
  max-width: 450rpx;
  height: 54rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  line-height: 54rpx;
  color: #999999;
  margin-top: 17rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background-color: transparent;
  text-align: left;
  -webkit-appearance: none;
  appearance: none;
}
.personal-information-main .mainCont .picker{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  line-height: 85rpx;
  color: #333333;
  float: left;
  overflow: hidden;
}
.personal-information-main .mainCont .picker .pickerName{
  width: 200rpx;
  height: 100%;
  float: left;
}
.personal-information-main .mainCont .picker .pickerName::after{
  content: '*';
  color: #FF0000;
}
.personal-information-main .mainCont .picker .pickerContent{
  width: calc(100% - 200rpx);
  height: 100%;
  float: left;
}
.personal-information-content .personal-information-commit{
  width: calc(100% - 88rpx);
  height: 92rpx;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 36rpx;
  color: #ffffff;
  line-height: 92rpx;
  text-align: center;
  margin: 60rpx auto 60rpx auto;
  background-color: #b4282d;
  border-radius: 15rpx;
  display: block;
}